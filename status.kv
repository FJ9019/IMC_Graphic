
<StatusPage>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        canvas.before:
            Color: 
                rgba: 0, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        text: "Etat de Santé"
        font_size: extra
        font_name: acme
        size_hint: 1, 0.1
    FloatLayout:
        Image:
            source: "images/linda.png"
            size_hint: 0.5, 1
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.3, 0.4
            pos_hint: {"center_x": 0.65, "center_y": 0.65}
            Label:
                text: "D'après les analyses"
                font_size: medium
                font_name: amble_regular
                text_size: self.size
                valign: "middle"
                halign: "left"
            Label:
                text: "Etat : "+root.status
                font_size: middle
                font_name: amble_regular
                text_size: self.size
                valign: "middle"
                halign: "left"
            Label:
                text: "Cause : "+root.cause
                font_size: middle
                font_name: amble_regular
                text_size: self.size
                valign: "middle"
                halign: "left"
            Label:
                text: "Conseil : "+root.conseil
                font_size: middle
                font_name: amble_regular
                text_size: self.size
                valign: "middle"
                halign: "left"