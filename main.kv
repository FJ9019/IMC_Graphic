                            valign: "middle"
                        TextInput: 
                            multiline: False
                            size_hint: 1, 0.5
                            pos_hint: {"center_y": 0.5}
                            write_tab: False
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            text: "Mot de passe"
                            color: 0, 0, 0
