
#: import hex kivy.utils.get_color_from_hex
#: set bleu "#46ADF8"
#: set blanc "#f1f1f1"
#: set small dp(12)
#: set medium dp(24)
#: set extra dp(36)
#: set acme "fonts/acme.ttf"
#: set amble_regular "fonts/amble/Regular.ttf"
#: set amble_italic "fonts/amble/Italic.ttf"
#: set radius_ dp(20)
SignupPage:


<HomeInterface>:
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"

    Label:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                pos: self.pos
                size: self.size
        text: "Bienvenue dans votre IMC Calculator"
        size_hint: 1, 0.1
        font_size: extra
        font_name: acme

    FloatLayout:
        orientation: "horizontal"
        Image:
            source: "images/docteur_2.png"
            pos_hint:{"x":0}
            size_hint: 0.5, 1
        FloatLayout:
            size_hint: None, None
            size: dp(285), dp(275)
            pos_hint:{"x":0.6, "center_y":0.5}
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(20), dp(20)
            BoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                spacing: dp(40)
                padding: dp(15), dp(55)
                Button:
                    text: "Connexion"
                    font_size: medium
                    font_name: amble_italic
                    size_hint: 0.9, 0.3
                    pos_hint: {"center_x": 0.5}
                    background_normal: "images/button_background.png"
                    background_down: "images/button_background.png"
                Button:
                    text: "Inscription"
                    font_size: medium
                    font_name: amble_italic
                    size_hint: 0.9, 0.3
                    pos_hint: {"center_x": 0.5}
                    background_normal: "images/button_background.png"
                    background_down: "images/button_background.png"

<LoginPage>:
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"

    Label:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                pos: self.pos
                size: self.size
        text: "Veuillez vous connect√© pour continuer"
        size_hint: 1, 0.1
        font_size: extra
        font_name: acme

    FloatLayout:
        orientation: "horizontal"
        Image:
            source: "images/docteur_2.png"
            pos_hint:{"x":0}
            size_hint: 0.5, 1
        FloatLayout:
            size_hint: None, None
            size: dp(285), dp(275)
            pos_hint:{"x":0.6, "center_y":0.5}
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(20), dp(20)
            BoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                spacing: dp(35)
                padding: dp(10), dp(30)
                BoxLayout:
                    orientation: "vertical"
                    spacing: dp(10)
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            text: "Pseudo"
                            color: 0, 0, 0
                            font_size: medium
                            font_name: acme
                            text_size: self.size
                            halign: "left"
                            valign: "middle"
                        TextInput: 
                            multiline: False
                            size_hint: 1, 0.5
                            pos_hint: {"center_y": 0.5}
                            write_tab: False
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            text: "Mot de passe"
                            color: 0, 0, 0
                            font_size: medium
                            font_name: acme
                            text_size: self.size
                            halign: "left"
                            valign: "middle"
                        TextInput: 
                            multiline: False
                            size_hint: 1, 0.5
                            pos_hint: {"center_y": 0.5}
                            write_tab: False
                            password: True
                Button:
                    text: "Connexion"
                    font_size: medium
                    font_name: amble_italic
                    size_hint: 0.9, 0.3
                    pos_hint: {"center_x": 0.5}
                    background_normal: "images/button_background.png"

<SignupPage>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                pos: self.pos
                size: self.size
        text: "Creer un nouveau compte"
        font_size: extra
        font_name: acme
        size_hint: 1, 0.1
    FloatLayout:
        orientation: "horizontal"
        Image:
            source: "images/docteur_2.png"
            size_hint: 0.5, 1
            pos_hint: {"center_y": 0.53}
        FloatLayout:
            orientation: "vertical" 
            canvas.before:
                Color:
                    rgb: hex(blanc)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: radius_, radius_
            size_hint: 0.9, 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.47}
            BoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                spacing: dp(50)
                padding: dp(15), dp(70)
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 0.5, 0.07
                    pos_hint: {"center_x": 0.5, "top": 0.95}
                    spacing: dp(10)
                    Label:
                        text: "Pseudo"
                        color: 0, 0, 0
                        font_size: medium
                        font_name: amble_italic
                        text_size: self.size
                        valign: "middle"
                        halign: "right"
                    TextInput:
                        id: pseudo
                        hint_text: "Pseudo"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 0.07
                    spacing: dp(10)
                    # pos_hint: {"center_x": 0.5, "top": 0.8}
                    TextInput:
                        id: nom_prenom
                        hint_text: "Nom & Prenom"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                    TextInput:
                        id: age
                        hint_text: "Age"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                    Spinner:
                        id: sex
                        text: "Sex"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                        values: "Homme", "Femme"
                        background_normal: "images/button_background.png"
                    TextInput:
                        id: travail
                        hint_text: "Travail"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 0.07
                    spacing: dp(10)
                    TextInput:
                        id: taille
                        hint_text: "Taille"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                    TextInput:
                        id: poids
                        hint_text: "Poids(kg)"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 0.07
                    spacing: dp(10)
                    TextInput:
                        id: password
                        hint_text: "Mot de passe"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                        password: True
                    TextInput:
                        id: password_repeat
                        hint_text: "Repet√© le mot de passe"
                        font_name: amble_regular
                        font_size: dp(18)
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        multiline: False
                        write_tab: False
                        password: True
            Button:
                text: "Creer un compte"
                background_normal: "images/button_background.png"
                size_hint: 0.4, 0.09
                pos_hint: {"right": 0.98, "y": 0.04}
                font_size: medium
                font_name: acme