
#: import hex kivy.utils.get_color_from_hex
#: set bleu "#46ADF8"
# set blanc "f1f1f1"
#: set small dp(12)
#: set medium dp(24)
#: set extra dp(36)
#: set acme "fonts/acme.ttf"
#: set amble_regular "fonts/amble/Regular.ttf"
#: set amble_italic "fonts/amble/Italic.ttf"
HomeInterface:


<HomeInterface>:
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"

    Label:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                pos: self.pos
                size: self.size
        text: "Bienvenue dans votre IMC Calculator"
        size_hint: 1, 0.1
        font_size: extra
        font_name: acme

    FloatLayout:
        orientation: "horizontal"
        Image:
            source: "images/docteur_2.png"
            pos_hint:{"x":0}
            size_hint: 0.5, 1
        FloatLayout:
            size_hint: None, None
            size: dp(285), dp(275)
            pos_hint:{"x":0.6, "center_y":0.5}
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(20), dp(20)
