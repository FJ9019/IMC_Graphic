
<IndexPage>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        text: "Bienvenue Mrs"
        font_name: acme
        font_size: extra
        size_hint: 1, 0.1

    FloatLayout:
        Image:
            source: "images/linda.png"
            size_hint: 0.5, 1
        Label:
            text: "Je suis le docteur RÃ©gine Joseph"
            font_name: acme
            font_size: medium
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        BoxLayout:
            canvas.before:
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: radius_, radius_
            orientation: "vertical"