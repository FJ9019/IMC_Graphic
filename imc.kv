
<Imc>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        canvas.before:
            Color: 
                rgba: 0, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        text: "Votre IMC"
        font_size: extra
        font_name: acme
        size_hint: 1, 0.1
    FloatLayout:
        Image:
            source: "images/linda.png"
            size_hint: 0.5, 1
        Label:
            text: "L Indice de Masse Corporelle est une valeur definit par l’Organisation mondiale de la santé pour évaluer la corpulence d’un individu et donc les éventuels risques pour la santé."
            font_name: amble_regular
            font_size: medium
            size_hint: None, None
            size: dp(550), dp(200)
            text_size: self.size
            halign: "center"
            valign: "middle"
            pos_hint: {"center_y": 0.75, "center_x": 0.65}
        BoxLayout:
            orientation: "horizontal"
            size_hint: 0.2, 0.7
            pos_hint: {"center_y": 0.45, "center_x": 0.7}
            Label:
                text: "IMC"
                font_name: amble_regular
                font_size: medium
            TextInput:
                readonly: True